<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"


    android:background="@drawable/background">





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="30dp"
            android:id="@+id/text2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E P E M"
                android:textSize="36sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="ADMIN"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"/>


            </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="@drawable/backroundepem"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:text="Aplikasi Mebel Masa kini"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:id="@+id/text"
        />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@+id/text"

        android:layout_margin="16dp"

        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/backround_daftar"
            android:layout_height="wrap_content"
            android:id="@+id/daftar"
            android:text="DAFTAR"
            android:layout_marginRight="6dp"
            android:textColor="@android:color/white"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/backround_login"
            android:layout_height="wrap_content"
            android:id="@+id/Login"
            android:text="LOGIN"
            android:layout_marginLeft="6dp"
            android:textColor="@color/tombolDaftar"
            />
    </LinearLayout>



</RelativeLayout>